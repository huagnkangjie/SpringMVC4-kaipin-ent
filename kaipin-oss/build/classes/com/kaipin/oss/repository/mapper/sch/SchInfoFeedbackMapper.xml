  <!-- 反馈信息 -->
  <insert id="insertFeedback" parameterType="com.kaipin.oss.model.sch.SchInfoFeedback">
  	insert into school_info_feedback
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="schoolId != null" >
        school_id,
      </if>
      <if test="createTime != null" >
        create_time,
      </if>
      <if test="platformUserId != null" >
        platform_user_id,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id,jdbcType=VARCHAR},
      </if>
      <if test="schoolId != null" >
        #{schoolId,jdbcType=VARCHAR},
      </if>
      <if test="createTime != null" >
        #{createTime,jdbcType=BIGINT},
      </if>
      <if test="platformUserId != null" >
        #{platformUserId,jdbcType=BIGINT},
      </if>
    </trim>
  </insert>
  
  <!-- 反馈关联 -->
  <insert id="insertFeedbackRelation" parameterType="com.kaipin.oss.model.sch.SchInfoFeedback">
  	insert into school_info_feedback_relation
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="configId != null" >
        config_id,
      </if>
      <if test="feedbackId != null" >
        feedback_id,
      </if>
      <if test="content != null" >
        content,
      </if>
      <if test="createTime != null" >
        create_time,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="configId != null" >
        #{configId,jdbcType=VARCHAR},
      </if>
      <if test="feedbackId != null" >
        #{feedbackId,jdbcType=VARCHAR},
      </if>
      <if test="content != null" >
        #{content,jdbcType=VARCHAR},
      </if>
      <if test="createTime != null" >
        #{createTime,jdbcType=BIGINT},
      </if>
    </trim>
  </insert>
  
  
  <!-- 配置list -->
  <select id="getClassConfig" resultMap="BaseResultMap">
  	select 
  		* 
  	from 
  		school_info_feedback_config
  </select>
  
  
  <!-- 模板list -->
  <select id="getClassTemplate" resultMap="BaseResultMap" parameterType="java.lang.String">
  	select 
  		* 
  	from 
